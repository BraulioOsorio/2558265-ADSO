<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/boton_personalizado.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado normal del botón -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#00A100" /> <!-- Fondo cuando el botón no está presionado -->
            <corners android:radius="8dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>

    <!-- Estado presionado del botón -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#007F00" /> <!-- Fondo cuando el botón está presionado -->
            <corners android:radius="8dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>

</selector>
